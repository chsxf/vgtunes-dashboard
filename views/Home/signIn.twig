{% extends "root.twig" %}

{% block page_title "Sign In" %}

{% block page_content %}
	{{ parent() }}

	<div class="container-fluid">
		<div class="col-4">
			<form method="post">
				<div class="mb-3">
					<label for="user_name" class="form-label">Name</label>
					{% dv_field validator 'user_name' %}
				</div>

				<div class="mb-3">
					<label for="user_password" class="form-label">Password</label>
					{% dv_field validator 'user_password' %}
				</div>

				<button type="submit" class="btn btn-primary">Sign In</button>
			</form>
		</div>
	</div>
{% endblock %}
