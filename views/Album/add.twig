{% extends "root.twig" %}

{% block page_title "Add New Album" %}

{% block page_content %}
	{{ parent() }}

	<form method="post" action="/Album/add">
		{% dv_field validator 'cover_url' %}

		<p>Name:
			{% dv_field validator 'title' %}</p>
		<div id="suggestions">
			<p>Suggestions:</p>
			<ul></ul>
		</div>
		<hr/>
		<div id="cover">
			<img width="256"/>
			<p>
				<a href="#">Download Covers</a>
			</p>
			<hr/>
		</div>
		<p>Artist:
			{% dv_field validator 'artist_name' %}</p>
		<p>Deezer:
			{% dv_field validator 'deezer_platform_id' %}
			<span id="deezer_url"></span>
		</p>
		<p>Spotify:
			{% dv_field validator 'spotify_platform_id' %}
			<span id="spotify_log"></span>
		</p>
		<p>Apple Music:
			{% dv_field validator 'apple_music_platform_id' %}
			<span id="apple_music_log"></span>
		</p>
		<hr/>
		<button type="submit">Add</button>
	</form>
{% endblock %}
