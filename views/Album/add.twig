{% extends "@mfx/HTML.twig" %}

{% block body %}
	{{ parent() }}

	<h1>Add New Album</h1>

	<form method="post" action="/Album/add">
		<p>Name:
			{% dv_field validator 'name' 'name' %}</p>
		<hr/>
		<p>Deezer:
			{% dv_field validator 'deezer_platform_id' 'deezer_platformId' %}</p>
		<p>Spotify:
			{% dv_field validator 'spotify_platform_id' 'spotify_platformId' %}</p>
		<p>Apple Music:
			{% dv_field validator 'apple_music_platform_id' 'apple_music_platformId' %}</p>
		<hr/>
		<button type="submit">Add</button>
	</form>
{% endblock %}
